<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/exit_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_close" />

    <EditText
        android:id="@+id/edit_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="20dp"
        android:singleLine="true"
        android:textColor="#333333"
        android:gravity="center"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edit_time"
        android:hint="输入按钮ID"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:singleLine="true"
        android:textColor="#333333"
        android:gravity="center"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/commentIds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_id"
        android:orientation="vertical"
        android:visibility="gone">
        <EditText
            android:id="@+id/content_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/edit_time"
            android:hint="输入内容描述区ID"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="20dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/edit_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/edit_time"
            android:hint="输入编辑框ID"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="20dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/send_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/edit_time"
            android:hint="输入发送ID"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="20dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/close_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/edit_time"
            android:hint="输入关闭评论ID"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="20dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/confirm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/commentIds"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/default_detect_btn_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="#333333"
        android:textSize="18sp" />


</RelativeLayout>